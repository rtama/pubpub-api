displayName: Pub
description: Routes to access data about a Pub's followers
get: 
  description: Get a list of all followers
  queryParameters:
    pubId:
      type: string
      required: true
  responses:
    200:
      body:
        application/json:
          example: |
            [
              {
                  "id": 1,
                  "username": "jane-doe",
                  "firstName": "Jane",
                  "lastName": "Doe",
                  "image": "http://images.com/example.jpg"
              }
            ]
    500:
      body:
        application/json:
          example: "Pub not found"
post:
  description: Create a new Follow
  body:
    application/json:
      formParameters:
        pubId: 
          description: id of the pub that will be followed.
          required: true
  responses:
    200:
      body:
        application/json:
          example: |
            {
              "followerId": 1,
              "pubId": 3,
              "updatedAt": "2016-11-22T02:10:21.874Z",
              "createdAt": "2016-11-22T02:10:21.874Z",
              "notifyOnNewVersion": null,
              "notifyOnNewFeature": null,
              "notifyOnNewDiscussions": null
            }
    500:
      body:
        application/json:
          example: |
            {
              error : "Error following pub"
            }
put:
  description: edit the values of the follow
  body:
    application/json:
      formParameters:
        pubId: 
          description: id of the pub that will have follow data updated.
          required: true
        notifyOnNewVersion:
          description: whether notifications are created for new versions. 
  responses:
    200:
      body:
        application/json:
          example: "true"
    500:
      body:
        application/json:
          example: |
            {
              error : "Error updated Follow"
            }            
delete:
  description: Remove a follow
  body:
    application/json:
      formParameters:
        pubId: 
          description: id of the pub to remove follow from
          required: true
  responses:
    200:
      body:
        application/json:
          example: "true"
    500:
      body:
        application/json:
          example: |
            {
              error : "Error deleting follow"
            }