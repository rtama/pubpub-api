{ "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/jsx-boolean-value": 0,
    "react/jsx-quotes": 0,
    "react/sort-comp": 0,
    "react/no-multi-comp": 0,
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "jsx-quotes": 2,
    "block-scoped-var": 0,
    "padded-blocks": 0,
    "comma-dangle": 0,
    "comma-spacing": 1,
    "no-console": 0,
    "no-multiple-empty-lines": 1,
    "no-undef": 1,
    "no-loop-func": 0,
    "no-debugger": 0,
    "prefer-const": 1,
    "no-alert": 1,
    "func-names": 0,
    "no-multi-spaces": 1,
    "no-cond-assign": 0,
    "no-trailing-spaces": 0,
    "indent": [2, "tab"],
    "new-cap": 0,
    "no-unused-vars": [1, {"vars": "local", "args": "none"}],
    "id-length": [2, {"exceptions": ["_"]}]
  },
  "plugins": [
    "react", "import"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      moduleDirectory: ["src", "api"]
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true,
    "socket": true,
    "webpackIsomorphicTools": true
  }
}
